{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Student index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Cin</th>
                    <th>Tel</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for student in students %}
                <tr>
                    <td>{{ student.id }}</td>
                    <td>{{ student.nom }}</td>
                    <td>{{ student.prenom }}</td>
                    <td>{{ student.cin }}</td>
                    <td>{{ student.tel }}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('app_student_show', {'id': student.id}) }}">Show</a>
                        <a class="btn btn-success" href="{{ path('app_student_edit', {'id': student.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary mt-3" href="{{ path('app_student_new') }}">Create new</a>
    </div>
{% endblock %}
