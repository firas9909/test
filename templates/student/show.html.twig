{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Student</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ student.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ student.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ student.prenom }}</td>
                </tr>
                <tr>
                    <th>Cin</th>
                    <td>{{ student.cin }}</td>
                </tr>
                <tr>
                    <th>Tel</th>
                    <td>{{ student.tel }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary mt-3" href="{{ path('app_student_index') }}">Back to List</a>

        <a class="btn btn-success mt-3" href="{{ path('app_student_edit', {'id': student.id}) }}">Edit</a>

        {{ include('student/_delete_form.html.twig') }}
    </div>
{% endblock %}
